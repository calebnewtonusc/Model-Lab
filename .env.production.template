# ModelLab Production Environment Variables
# Copy this file to .env and fill in your values

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================
NODE_ENV=production
PORT=3001

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# Option 1: Use SQLite (default, good for < 10K runs)
# DATABASE_URL= # Leave empty for SQLite

# Option 2: Use PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@host:5432/modellab
# Example for Neon: postgresql://user:pass@ep-xxx.us-east-2.aws.neon.tech/modellab
# Example for Supabase: postgresql://postgres:pass@db.xxx.supabase.co:5432/postgres
# Example for Railway: postgresql://postgres:pass@containers-us-west-xxx.railway.app:7891/railway

# ============================================================================
# STORAGE CONFIGURATION
# ============================================================================
# Option 1: Local storage (default, development only)
STORAGE_TYPE=local

# Option 2: Vercel Blob Storage (recommended for Vercel deployments)
# STORAGE_TYPE=vercel-blob
# BLOB_READ_WRITE_TOKEN=vercel_blob_rw_XXXXXXXXXX

# Option 3: AWS S3 (recommended for high-scale production)
# STORAGE_TYPE=s3
# AWS_S3_BUCKET=modellab-artifacts
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=AKIAIOSFODNN7EXAMPLE
# AWS_SECRET_ACCESS_KEY=wJalrXUtnFEMI/K7MDENG/bPxRfiCYEXAMPLEKEY

# ============================================================================
# AUTHENTICATION (when Phase 2 is implemented)
# ============================================================================
# JWT_SECRET=your-super-secure-random-string-at-least-32-characters-long
# JWT_EXPIRES_IN=7d

# ============================================================================
# CORS CONFIGURATION
# ============================================================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# ============================================================================
# RATE LIMITING
# ============================================================================
# Requests per 15 minutes per IP
API_RATE_LIMIT=100
UPLOAD_RATE_LIMIT=20

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
# Optional: Sentry for error tracking
# SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# Optional: Custom log level
# LOG_LEVEL=info

# ============================================================================
# DEPLOYMENT PLATFORM SPECIFIC
# ============================================================================
# Vercel: These are set automatically
# VERCEL=1
# VERCEL_URL=your-app.vercel.app

# Railway: Set these if using Railway
# RAILWAY_ENVIRONMENT=production

# Render: Set these if using Render
# RENDER=true
# RENDER_EXTERNAL_URL=https://your-app.onrender.com

# ============================================================================
# FEATURE FLAGS (optional)
# ============================================================================
# ENABLE_SIGNUP=false  # Set to true when auth is implemented
# MAX_UPLOAD_SIZE=104857600  # 100MB in bytes
# MAX_ARTIFACT_SIZE=524288000  # 500MB in bytes
